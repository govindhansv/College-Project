
<SECTION>
    <div class="container">
      <div class="row" >
        <a href="/owner/add-product" class="btn btn-success ml-auto mt-3" >Add Products</a>
      </div>
        <table class="table mt-2">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Product</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
       <th scope="col">Image</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{ @index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
       <td><img style="width:50px;height:50px;"src="/product-image/{{this._id}}.jpg"></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</SECTION>